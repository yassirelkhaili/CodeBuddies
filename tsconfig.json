{
  "compilerOptions": {
    "outDir": "./resources/js",
    "rootDir": "./resources/ts",
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["resources/ts/**/*"]
}